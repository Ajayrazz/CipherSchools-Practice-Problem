//program to implement simple calculator that support addition , substraction, multiplication, division
#include <stdio.h>
int main()
{
    char operator;
    int a,b;
    printf("Enter operator value : ");
    scanf("%c",&operator);
    printf("Enter value: ");
    scanf("%d %d",&a,&b);
    
    switch(operator){
        case '+':
            printf("%d",a+b);
            break;
        case '-':
            printf("%d",a-b);
            break;
        case '*':
            printf("%d",a*b);
            break;
        case '/':
            printf("%d",a/b);
            break;
        default:
            printf("Invalid");
    
    }
    return 0;
    
}
