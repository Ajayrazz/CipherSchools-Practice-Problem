//program to calculate sum of digit using while loop
#include <stdio.h>
int main()
{
    int n;
    scanf("%d",&n);
    int sum = 0;
    while(n>0){
        int lastdigit = n%10;
        sum += lastdigit;
        n = n/10;
    }
    printf("Sum of digit of given number is %d.",sum);
    return 0;
}
